{
  "permissions": {
    "allow": [
      "*",
      "Bash($HOME/.claude/plugins/cache/claude-plugins-official/ralph-wiggum/*:*)",
      "Bash($CLAUDE_PROJECT_DIR/.claude/ralph-*)",
      "Bash(npm run:*)",
      "Read(src/**)"
    ]
  },
  "defaultMode": "dontAsk",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$command\" == *\"git commit\"* ]]; then \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/tsc-check.sh; fi"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/i18n-check.sh"
          }
        ]
      },
      {
        "matcher": "Glob",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/component-gen.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/code-review-trigger.sh",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/playwright-e2e-verify.sh",
            "timeout": 180
          }
        ]
      }
    ]
  },
  "ui": {
    "colorTheme": "system",
    "compactMode": false
  }
}
