{
  "permissions": {
    "allow": ["*"]
  },
  "defaultMode": "acceptEdits",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$command\" == *\"git commit\"* ]]; then \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/tsc-check.sh; fi",
            "description": "TypeScript check on git commit"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/i18n-check.sh",
            "description": "Check i18n sync after edits"
          }
        ]
      },
      {
        "matcher": "Glob",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/component-gen.sh",
            "description": "Generate component template on new file"
          }
        ]
      },
      {
        "matcher": "Edit|Write|Read",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/update-claude-md.sh",
            "description": "Auto-update CLAUDE.md on relevant changes",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/code-review-trigger.sh",
            "description": "Run code review on task completion",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/playwright-e2e-verify.sh",
            "description": "Run Playwright E2E verification on task completion",
            "timeout": 180
          }
        ]
      }
    ]
  },
  "ui": {
    "colorTheme": "system",
    "compactMode": false
  }
}
